---
let showSuccessMessage = false;
---

<form
  data-netlify="true"
  method="POST"
  name="contact"
  class="rounded-lg max-w-2xl w-full shadow-xl flex flex-col px-8 py-8 bg-white"
>
  {
    showSuccessMessage ? (
      <p class="p-4 text-center mx-auto text-purple font-bold">
        Message sent. Sara will be in touch shortly!
      </p>
    ) : (
      <>
        <h1 class="text-center">Send a message</h1>

        <label for="fullname" class="text-gray-500 font-light mt-8">
          Full name <span class="text-red-500">*</span>
        </label>
        <input
          type="text"
          name="fullname"
          class="bg-transparent border-b py-2 pl-4 focus:outline-none focus:rounded-md focus:ring-1 ring-purple font-light text-gray-500"
        />

        <label for="email" class="text-gray-500 font-light mt-4">
          E-mail <span class="text-red-500">*</span>
        </label>
        <input
          type="email"
          name="email"
          class="bg-transparent border-b py-2 pl-4 focus:outline-none focus:rounded-md focus:ring-1 ring-purple font-light text-gray-500"
        />

        <label for="phone" class="text-gray-500 font-light mt-4">
          Phone (Optional)
        </label>
        <input
          type="tel"
          name="phone"
          class="bg-transparent border-b py-2 pl-4 focus:outline-none focus:rounded-md focus:ring-1 ring-purple font-light text-gray-500"
        />

        <label for="message" class="text-gray-500 font-light mt-4">
          Message <span class="text-red-500">*</span>
        </label>
        <textarea
          name="message"
          class="bg-transparent border-b py-2 pl-4 focus:outline-none focus:rounded-md focus:ring-1 ring-purple font-light text-gray-500"
        />

        <div class="flex flex-row items-center justify-start mt-4">
          <button type="submit" class="sr-link max-w-none w-auto py-2 text-2xl">
            Send
          </button>
        </div>
      </>
    )
  }
</form>
