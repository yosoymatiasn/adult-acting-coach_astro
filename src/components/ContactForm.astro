<form
  data-netlify="true"
  method="POST"
  name="contact"
  class="max-w-lg mx-auto p-8 bg-gray-100 rounded-xl shadow-md flex flex-col gap-4"
>
  <div class="flex flex-col">
    <label for="name" class="font-semibold mb-1">Name</label>
    <input
      type="text"
      id="name"
      name="name"
      placeholder="Your Name"
      class="p-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
  </div>

  <div class="flex flex-col">
    <label for="email" class="font-semibold mb-1">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="you@example.com"
      class="p-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
  </div>

  <div class="flex flex-col">
    <label for="message" class="font-semibold mb-1">Message</label>
    <textarea
      id="message"
      name="message"
      placeholder="Your message..."
      class="p-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-y min-h-[120px]"
    ></textarea>
  </div>

  <button
    type="submit"
    class="bg-blue-500 text-white font-semibold rounded-lg p-3 hover:bg-blue-600 transition"
  >
    Send Message
  </button>
</form>
