---
// Banner.astro
interface Props {
  title?: string
}

const { title } = Astro.props
---

<div class="relative mb-10 md:mb-16 overflow-hidden">
  <!-- Background Gradient -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-purple-700 via-purple-800 to-purple-900 opacity-80 blur-sm scale-105 z-0"
  >
  </div>

  <!-- Radial Light Burst -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_rgba(255,255,255,0.1),_transparent)] z-0"
  >
  </div>

  <!-- Decorative Glow Ring -->
  <div
    class="absolute top-1/2 left-1/2 w-[120%] h-[120%] -translate-x-1/2 -translate-y-1/2 rounded-full border-2 border-purple-400 opacity-20 animate-pulse z-0"
  >
  </div>

  <!-- Content Container -->
  <div
    class="container mx-auto px-4 pt-20 pb-12 md:pt-48 md:pb-20 relative z-10 flex justify-center"
  >
    <h1
      class="text-4xl md:text-5xl text-transparent bg-clip-text bg-gradient-to-r from-purple-200 via-white to-purple-300 text-center tracking-tight drop-shadow-xl leading-tight"
    >
      {title}
    </h1>
  </div>
</div>
